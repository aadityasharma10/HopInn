<hr class="my-5">

<div class="container">
  <h2 class="mb-4 text-center">Latest Listings</h2>
  <div class="row">
    <% if(listings.length === 0) { %>
      <p class="text-center">No listings available yet!</p>
    <% } %>

    <% listings.forEach(listing => { %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="<%= listing.image.url %>" class="card-img-top h-100" alt="<%= listing.title %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">&#8377; <%= listing.price %></p>
            <a href="/listings/<%= listing._id %>" class="btn btn-primary mt-auto">View</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
